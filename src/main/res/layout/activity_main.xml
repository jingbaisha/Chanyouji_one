<?xml version="1.0" encoding="utf-8"?>
<qianphone.com.canyouji.views.MySlidingMenu
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000">

    <!--导航栏-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/nav_bg"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/user_head_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/head_default" />

            <TextView
                android:id="@+id/username_tv"
                style="@style/navigation_username_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="游客" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/youji_btn"
            style="@style/navigation_btn_style">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/star" />

            <TextView
                style="@style/navigation_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="游记" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/shoucang_btn"
            style="@style/navigation_btn_style">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/star" />

            <TextView
                style="@style/navigation_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="收藏" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/xihuan_btn"
            style="@style/navigation_btn_style">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/star" />

            <TextView
                style="@style/navigation_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="喜欢" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/friend_btn"
            style="@style/navigation_btn_style">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/star" />

            <TextView
                style="@style/navigation_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="我的好友" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/travel_map_btn"
            style="@style/navigation_btn_style">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/star" />

            <TextView
                style="@style/navigation_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="旅行地图" />
        </LinearLayout>


    </LinearLayout>

    <!--内容容器-->
    <FrameLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFFFF">

        <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:text="内容" />-->

        <!--<ListView-->
        <!--android:id="@+id/listView"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"></ListView>-->
    </FrameLayout>

</qianphone.com.canyouji.views.MySlidingMenu>
